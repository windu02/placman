<div class="row-fluid"> 
    <div class="page-header">
        <h1><%= t('Material') %> <small><%= t('EditRecording') %></small></h1>
    </div>
</div>

<div class="row-fluid">
	<div class="span12">
		<%= form_for @material, url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>
		  <%= render :partial => "material_form", :locals => { :f => f }  %>
		  <div class="control-group">
                <div class="controls">
                     <%= f.submit t('EditMaterial'), :class => "btn btn-primary" %>
                </div>
          </div>
		<% end %>
	</div>
</div>
