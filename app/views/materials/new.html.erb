<div class="row-fluid"> 
    <div class="page-header">
        <h1><%= t('Material') %> <small><%= t('NewRecording') %></small></h1>
    </div>
</div>

<div class="row-fluid">
	<div class="span12">
	<%= form_for([@parentCat, @parentCat.materials.build], url: {controller: "materials", action: "create", material_category_id: @parentCat.id}, html: {class: "form-horizontal"}) do |f| %>
	  <%= render :partial => "material_form", :locals => { :f => f } %>
	  <div class="control-group">
	        <div class="controls">
	             <%= f.submit t('SaveMaterial'), :class => "btn btn-primary" %>
	        </div>
	  </div>
	<% end %>
	</div>
</div>