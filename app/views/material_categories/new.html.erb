<div class="row-fluid"> 
    <div class="page-header">
        <h1><%= t('MaterialCategory') %> <small><%= t('NewRecording') %></small></h1>
    </div>
</div>

<div class="row-fluid">
	<div class="span12">
<% if !@parentCat.nil? %>
	<%= form_for([@parentCat, @parentCat.material_categories.build], url: {controller: "material_categories", action: "create", parentCatId: @parentCat.id}, html: {class: "form-horizontal"}) do |f| %>
	  <%= render :partial => "material_category_form", :locals => { :f => f } %>
	  <div class="control-group">
	        <div class="controls">
	             <%= f.submit t('SaveMaterialCategory'), :class => "btn btn-primary" %>
	        </div>
	  </div>
	<% end %>
<% else %>
	<%= form_for @material_category, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
	  <%= render :partial => "material_category_form", :locals => { :f => f }  %>
	  <div class="control-group">
	        <div class="controls">
	             <%= f.submit t('SaveMaterialCategory'), :class => "btn btn-primary" %>
	        </div>
	  </div>
	<% end %>
<% end %>
	</div>
</div>